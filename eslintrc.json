{
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-var": "error",
    "no-duplicate-imports": "error",
    "arrow-spacing": "error",
    "prefer-const": "error",
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-console": "warn",
    "semi": "error",
    "semi-spacing": "error",
    "no-undef": "error",
    "space-in-parens": "error",
    "space-infix-ops": "error"
  }
}